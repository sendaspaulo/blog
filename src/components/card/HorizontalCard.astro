---
import { Image } from "astro:assets";
import type {CardProps} from './types'

interface Props extends CardProps {
  
}
const { title, img, desc,  href, badge, tags, target = "_blank" } = Astro.props;
// const tag_url = `${url.split("/").slice(0, -1).join("/")}/tag`;
---

<div
  class="rounded-lg bg-base-200 hover:shadow-xl transition ease-in-out hover:scale-[102%] hover:bg-opacity-65"
>
  <a href={href}>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
            transition:name={title + "image"} 
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold" transition:name={title}>
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl" transition:name={desc}>{desc}</p>
        <div class="card-actions justify-end">
          {
            tags &&
              tags.map((tag) => (
                <p class="badge badge-outline">
                  {tag}
                </p>
              ))
          }
        </div>
      </div>
    </div>
  </a>
</div>
